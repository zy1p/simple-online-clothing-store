{
  "compilerOptions": {
    "module": "preserve",
    "moduleResolution": "bundler",
    "declaration": true,
    "removeComments": true,
    "emitDecoratorMetadata": true,
    "experimentalDecorators": true,
    "allowSyntheticDefaultImports": true,
    "target": "ES2023",
    "sourceMap": true,
    "outDir": "./dist",
    "baseUrl": "./",
    "incremental": true,
    "skipLibCheck": true,
    "strictNullChecks": true,
    "forceConsistentCasingInFileNames": true,
    "noImplicitAny": false,
    "strictBindCallApply": false,
    "noFallthroughCasesInSwitch": false,
    "paths": {
      "@lib/auth": [
        "libs/auth/src"
      ],
      "@lib/auth/*": [
        "libs/auth/src/*"
      ],
      "@lib/db": [
        "libs/db/src"
      ],
      "@lib/db/*": [
        "libs/db/src/*"
      ],
      "@lib/env": [
        "libs/env/src"
      ],
      "@lib/env/*": [
        "libs/env/src/*"
      ]
    }
  }
}